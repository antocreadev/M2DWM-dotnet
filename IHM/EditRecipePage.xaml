<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IHM.EditRecipePage"
             Title="Edit Recipe">

    <VerticalStackLayout Padding="30" Spacing="25">
        <Label Text="Edit Recipe" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

        <Entry x:Name="RecipeNameEntry" Placeholder="Recipe Name" />
        <Entry x:Name="IngredientsEntry" Placeholder="Ingredients (comma separated)" />
        <Entry x:Name="InstructionsEntry" Placeholder="Instructions" />
        <Entry x:Name="PrepTimeEntry" Placeholder="Prep Time (minutes)" Keyboard="Numeric" />
        <Entry x:Name="CookTimeEntry" Placeholder="Cook Time (minutes)" Keyboard="Numeric" />

        <HorizontalStackLayout Spacing="10">
            <Button x:Name="SaveButton" Text="Save" Clicked="OnSaveClicked" HorizontalOptions="FillAndExpand" />
            <Button x:Name="CancelButton" Text="Cancel" Clicked="OnCancelClicked" HorizontalOptions="FillAndExpand" />
        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentPage>
